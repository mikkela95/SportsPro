@model IEnumerable<SportsPro.Models.Technician>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Technician Manager";
}

<h2>Technician Manager</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TechnicianID" class="btn btn-primary">
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TechnicianID" class="btn btn-secondary">
                        Details
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.TechnicianID" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add Technician</a>
