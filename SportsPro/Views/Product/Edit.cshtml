@model SportsPro.Models.Product

@{
    Layout = "_Layout";
}

<h2>Edit Product</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form action="/Product/Edit/@Model.ProductID/@Model.Name/changes-made/" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProductID" />

            <div class="form-group mb-2">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="YearlyPrice" class="control-label"></label>
                <input asp-for="YearlyPrice" class="form-control" />
                <span asp-validation-for="YearlyPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
