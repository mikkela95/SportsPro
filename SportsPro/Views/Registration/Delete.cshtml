@model SportsPro.Models.Registration

@{
    ViewBag.Title = "Registrations - Delete";
}

<h1>Delete Registration</h1>
<hr />

<h4>Are you sure you want to delete this?</h4>
<hr />

<dl class="dl-horizontal">
    <dt>Registration ID</dt>
    <dd>@Model.RegistrationID</dd>
    <dt>Customer</dt>
    <dd>@Model.Customer?.FullName</dd>
    <dt>Product</dt>
    <dd>@Model.Product?.Name</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="RegistrationID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>
