@model SportsPro.Models.Incident
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Incident";
}

<h2>Create Incident</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateOpened" class="form-label"></label>
                <input asp-for="DateOpened" class="form-control" type="date" />
                <span asp-validation-for="DateOpened" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateClosed" class="form-label"></label>
                <input asp-for="DateClosed" class="form-control" type="date" />
                <span asp-validation-for="DateClosed" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CustomerID" class="form-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductID" class="form-label"></label>
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TechnicianID" class="form-label"></label>
                <select asp-for="TechnicianID" class="form-control" asp-items="ViewBag.TechnicianID"></select>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="List" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
